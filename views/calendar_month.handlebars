<div class="container">

	<div class="jumbotron">
		<h1 class="text-center"><span class="glyphicon glyphicon-fire"></span>Indifference Optimizer</h1>
		
		<div class="text-center">
			<a href="/calendar"><button type="button" class="btn btn-lg btn-primary"><span class="glyphicon glyphicon-list-alt"></span> Calendar</button></a>
			<a href="/"><button type="button" class="btn btn-lg btn-danger">Home</button></a>
			<a href="/wizard"><button type="button" class="btn btn-lg btn-info">Wizard</button></a>
		</div>

	</div>
	<div class="row">
		<div class="col-sm-12 col-lg-8">
		<div class="card card-default">
				<div class="card-heading">Calendar</div>
				<div class="card-body">
					<div class="text-center">
						<div class="row">
							<div class="col-sm-1 day-header">
								S
							</div>				
							<div class="col-sm-2 day-header">
								M
							</div>
							<div class="col-sm-2 day-header">
								Tu
							</div>
							<div class="col-sm-2 day-header">
								W
							</div>
							<div class="col-sm-2 day-header">
								Th
							</div>
							<div class="col-sm-2 day-header">
								F
							</div>
							<div class="col-sm-1 day-header">
								Sa
							</div>				
						</div>
						{{#each monthDates}}
						<div class="row">
							{{#each weekDates}}
							{{#if this.weekend}}
							<div class="col-sm-1 day-unselected {{#unless this.inMonth}}wrong-month{{/unless}}">
								{{this.day}}
							</div>				
							{{else}}
							<div class="col-sm-2 day-unselected {{#unless this.inMonth}}wrong-month{{/unless}}">
								{{this.day}}
							</div>
							{{/if}}
							{{/each}}
						</div>
						{{/each}}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
